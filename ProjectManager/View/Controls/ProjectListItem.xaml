<UserControl x:Class="ProjectManager.View.Controls.ProjectListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManager.View.Controls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <md:Card md:ShadowAssist.ShadowDepth="Depth1" UniformCornerRadius="5">
        <Grid Margin="20, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Row="0" x:Name="NameBlock"
                    Text="ProjectName"
                    VerticalAlignment="Center"
                    FontFamily="Idea" FontSize="13" FontWeight="Medium"/>
                <TextBlock
                    Grid.Row="1" x:Name="DescrBlock"
                    Text="Description"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Row="0"
                    Text="Last opened"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    FontFamily="Idea" FontSize="13" FontWeight="Medium"/>
                <TextBlock
                    HorizontalAlignment="Center"
                    Grid.Row="1" x:Name="DateBlock"
                    Text="12.12.1221"/>
            </Grid>

            <StackPanel 
                Orientation="Horizontal" Grid.Column="2" 
                HorizontalAlignment="Right">
                <Button 
                    Content="Open Project" 
                    Margin="10, 0" x:Name="OpenPrj" Click="OpenPrj_Click" Cursor="Hand"/>
                <Button 
                    Content="{md:PackIcon Kind=TrashOutline}"
                    x:Name="DeletePrj" Click="DeletePrj_Click"/>
            </StackPanel>
        </Grid>
    </md:Card>
</UserControl>
