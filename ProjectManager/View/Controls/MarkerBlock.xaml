<UserControl x:Class="ProjectManager.View.Controls.MarkerBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Border 
        Margin="0, 5, 10, 5"
        x:Name="MarkerBorder"
        BorderThickness="1" BorderBrush="Black" CornerRadius="2">
        <materialDesign:Card 
            x:Name="MarkerCard"
            Background="#FF3E4153" 
            UniformCornerRadius="2"
            materialDesign:ShadowAssist.ShadowDepth="Depth0">
            <Label 
                Margin="5, 0"
                Content="Text" Foreground="White" x:Name="MarkerText"
                FontSize="10" FontFamily="Idea" FontWeight="Medium"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </materialDesign:Card>
    </Border>
</UserControl>
