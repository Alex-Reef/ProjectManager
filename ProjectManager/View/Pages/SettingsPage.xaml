<Page x:Class="ProjectManager.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1020" MinWidth="1020" MinHeight="680"
      Title="SettingsPage">

    <Grid Background="{DynamicResource Background}">
        <materialDesign:DialogHost
            CloseOnClickAway="True"
            x:Name="Dialog">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card 
                    Width="200"
                    Background="{DynamicResource CardBackground}">
                    <StackPanel 
                        Margin="10, 15" Orientation="Vertical"
                        HorizontalAlignment="Center">
                        <TextBlock
                            x:Name="MessageBlock"
                            HorizontalAlignment="Center"
                            TextWrapping="Wrap"
                            FontFamily="Idea" FontSize="13" FontWeight="Bold"
                            Foreground="{DynamicResource Text}"
                            Margin="0, 10, 15, 0"/>
                        <Button
                            Margin="0, 20, 0, 0"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                            Background="{DynamicResource Primary}"
                            Content="{DynamicResource OK}"
                            Foreground="White"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            Width="100" Height="35"
                            FontFamily="Idea" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
            <StackPanel Orientation="Vertical" Margin="30, 0">
                <TextBlock
                    Text="{DynamicResource Settings}"
                    FontFamily="Idea" FontSize="25" FontWeight="Bold"
                    Opacity="0.9"
                    Margin="0, 30"
                    Foreground="{DynamicResource Text}"/>
                <Expander 
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource CardBackground}">
                    <Expander.Header>
                        <Grid Width="Auto" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon 
                                Kind="AccountDetailsOutline"
                                Width="25" Height="25"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Opacity="0.8"
                                Foreground="{DynamicResource Text}"/>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="17" FontWeight="Bold"
                                    Text="{DynamicResource UserInfo}"/>
                                <TextBlock
                                    Grid.Row="1"
                                    Opacity="0.7"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="13" FontWeight="SemiBold"
                                    Text="{DynamicResource UserInfoDescr}"/>
                            </Grid>
                        </Grid>
                    </Expander.Header>
                    <StackPanel
                        Orientation="Vertical"
                        TextBlock.Foreground="{DynamicResource Text}"
                        Margin="30,0,30,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                x:Name="SelectImageBtn"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="SelectImageBtn_Click"
                                materialDesign:ButtonAssist.CornerRadius="35"
                                Height="70" Width="70" Cursor="Hand">
                                <Button.Content>
                                    <materialDesign:PackIcon 
                                        Kind="Camera"
                                        Width="25" Height="25"/>
                                </Button.Content>
                            </Button>
                            <StackPanel 
                                Orientation="Vertical"
                                Width="Auto"
                                Margin="30, 10"
                                HorizontalAlignment="Left"
                                Grid.Column="1">
                                <StackPanel 
                                    Orientation="Horizontal"
                                    Width="300">
                                    <TextBox
                                        x:Name="FirstNameBox"
                                        Width="150" Padding="10"
                                        BorderBrush="{DynamicResource TextFieldBackground}"
                                        Background="{DynamicResource TextFieldBackground}"
                                        materialDesign:HintAssist.Foreground="{DynamicResource Text}"
                                        materialDesign:HintAssist.Background="Transparent"
                                        Foreground="{DynamicResource Text}"
                                        MaxLength="10"
                                        FontSize="11" FontFamily="Idea" FontWeight="SemiBold"
                                        Margin="0, 5, 10, 0"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        materialDesign:HintAssist.Hint="{DynamicResource First Name}"/>
                                    <TextBox
                                        x:Name="LastNameBox"
                                        Width="150" Padding="10"
                                        BorderBrush="{DynamicResource TextFieldBackground}"
                                        Background="{DynamicResource TextFieldBackground}"
                                        materialDesign:HintAssist.Foreground="{DynamicResource Text}"
                                        materialDesign:HintAssist.Background="Transparent"
                                        Foreground="{DynamicResource Text}"
                                        MaxLength="10"
                                        FontSize="11" FontFamily="Idea" FontWeight="SemiBold"
                                        Margin="0, 5, 10, 0"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        materialDesign:HintAssist.Hint="{DynamicResource Last Name}"/>
                                </StackPanel>
                                <TextBox     
                                    x:Name="EmailBox"
                                    Margin="0, 15" Padding="10"
                                    BorderBrush="{DynamicResource TextFieldBackground}"
                                    Background="{DynamicResource TextFieldBackground}"
                                    materialDesign:HintAssist.Foreground="{DynamicResource Text}"
                                    materialDesign:HintAssist.Background="Transparent"
                                    Foreground="{DynamicResource Text}"
                                    MaxLength="50"
                                    FontSize="11" FontFamily="Idea" FontWeight="SemiBold"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    materialDesign:HintAssist.Hint="{DynamicResource Email}"/>
                                <TextBox   
                                    x:Name="LoginBox"
                                    Padding="10"
                                    BorderBrush="{DynamicResource TextFieldBackground}"
                                    Background="{DynamicResource TextFieldBackground}"
                                    materialDesign:HintAssist.Foreground="{DynamicResource Text}"
                                    materialDesign:HintAssist.Background="Transparent"
                                    Foreground="{DynamicResource Text}"
                                    MaxLength="50"
                                    FontSize="11" FontFamily="Idea" FontWeight="SemiBold"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    materialDesign:HintAssist.Hint="{DynamicResource Username}"/>
                                <Button
                                    x:Name="SaveBtn"
                                    HorizontalAlignment="Right"
                                    Content="{DynamicResource Save}" Margin="0, 20"
                                    Padding="30, 0"
                                    Click="SaveBtn_Click"
                                    FontSize="14" FontFamily="Idea" FontWeight="SemiBold"
                                    Foreground="White"
                                    Background="{DynamicResource Primary}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>
                <Expander
                    Margin="0, 10, 0, 0"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource CardBackground}">
                    <Expander.Header>
                        <Grid Width="Auto" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon 
                                Kind="ShieldAccountOutline"
                                Width="25" Height="25"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Opacity="0.8"
                                Foreground="{DynamicResource Text}"/>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="17" FontWeight="Bold"
                                    Text="{DynamicResource Security}"/>
                                <TextBlock
                                    Grid.Row="1"
                                    Opacity="0.7"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="13" FontWeight="SemiBold"
                                    Text="{DynamicResource SecurityDescr}"/>
                                </Grid>
                            </Grid>
                    </Expander.Header>
                    <StackPanel
                        Orientation="Vertical"
                        Width="Auto"
                        Margin="30, 0"
                        HorizontalAlignment="Left"
                        Grid.Column="1">
                        <TextBox 
                            x:Name="OldPassBox"
                            materialDesign:HintAssist.Hint="{DynamicResource OldPassword}" 
                            BorderBrush="{DynamicResource TextFieldBackground}"
                            Background="{DynamicResource TextFieldBackground}"
                            materialDesign:HintAssist.Foreground="{DynamicResource Text}"
                            materialDesign:HintAssist.Background="Transparent"
                            Foreground="{DynamicResource Text}"
                            MaxLength="10"
                            FontSize="11" FontFamily="Idea" FontWeight="SemiBold"
                            Padding="10" Width="200" HorizontalAlignment="Left"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <TextBox 
                            x:Name="NewPassBox"
                            materialDesign:HintAssist.Hint="{DynamicResource NewPassword}" 
                            BorderBrush="{DynamicResource TextFieldBackground}"
                            Background="{DynamicResource TextFieldBackground}"
                            materialDesign:HintAssist.Foreground="{DynamicResource Text}"
                            materialDesign:HintAssist.Background="Transparent"
                            Foreground="{DynamicResource Text}"
                            MaxLength="10" Margin="0, 10"
                            FontSize="11" FontFamily="Idea" FontWeight="SemiBold"
                            Padding="10" Width="200" HorizontalAlignment="Left"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <Button
                            Content="{DynamicResource Save}"
                            x:Name="ChangePassBtn"
                            Click="ChangePassBtn_Click"
                            Margin="0, 10"
                            HorizontalAlignment="Right"
                            Padding="30, 0"
                            Foreground="White"
                            FontSize="14" FontFamily="Idea" FontWeight="SemiBold"
                            Background="{DynamicResource Primary}"/>
                    </StackPanel>
                    </Expander>
                <Expander
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Margin="0, 10, 0, 0"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource CardBackground}">
                    <Expander.Header>
                        <Grid Width="Auto" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon 
                                Kind="BrushOutline"
                                Width="25" Height="25"
                                Opacity="0.8" 
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Foreground="{DynamicResource Text}"/>
                            <Grid Grid.Column="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="17" FontWeight="Bold"
                                    Text="{DynamicResource Themes}"/>
                                <TextBlock
                                    Grid.Row="1"
                                    Opacity="0.7"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="13" FontWeight="SemiBold"
                                    Text="{DynamicResource ThemesDescr}"/>
                            </Grid>
                        </Grid>
                    </Expander.Header>
                    <StackPanel
                        Orientation="Vertical"
                        TextBlock.Foreground="{DynamicResource Text}"
                        Margin="24,8,24,16">
                        <ComboBox
                             Width="150"
                             HorizontalAlignment="Left"
                             x:Name="ThemeSelect" 
                             SelectionChanged="ThemeSelect_Selected">
                            <ComboBoxItem Content="{DynamicResource Dark}"/>
                            <ComboBoxItem Content="{DynamicResource Light}"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>
                <Expander
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Margin="0, 10, 0, 0"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource CardBackground}">
                    <Expander.Header>
                        <Grid Width="Auto" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon 
                                Kind="FormatText"
                                Width="25" Height="25"
                                Opacity="0.8" 
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Foreground="{DynamicResource Text}"/>
                            <Grid Grid.Column="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="17" FontWeight="Bold"
                                    Text="{DynamicResource Languages}"/>
                                <TextBlock
                                    Grid.Row="1"
                                    Opacity="0.7"
                                    Foreground="{DynamicResource Text}"
                                    FontFamily="Idea" FontSize="13" FontWeight="SemiBold"
                                    Text="{DynamicResource LanguagesDescr}"/>
                            </Grid>
                        </Grid>
                    </Expander.Header>
                    <StackPanel
                        Orientation="Vertical"
                        TextBlock.Foreground="{DynamicResource Text}"
                        Margin="24,8,24,16">
                        <ComboBox
                             Width="150"
                             HorizontalAlignment="Left"
                             x:Name="LangSelect" 
                             SelectionChanged="LangSelect_SelectionChanged">
                            <ComboBoxItem Content="{DynamicResource English}"/>
                            <ComboBoxItem Content="{DynamicResource Ukraine}"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </materialDesign:DialogHost>
    </Grid>
</Page>
