<Window x:Class="ProjectManager.TaskForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TaskEdit" Height="430" Width="400" ResizeMode="NoResize">
    <Grid Background="#F6F7FB">
        <StackPanel Grid.Column="0" Margin="10, 10, 10, 10">
            <StackPanel Orientation="Horizontal">
                <materialDesign:Card
                    Background="#FF3E4153" 
                    x:Name="MarkerCard"
                    Width="50" Height="20" 
                    HorizontalAlignment="Left" 
                    Margin="5, 0, 0, 0" 
                    MouseDown="MarkerCard_MouseDown"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0">
                    <Label
                        Content="Text" Foreground="{StaticResource MaterialDesignDarkForeground}" 
                        x:Name="MarkerText"
                        FontSize="10" FontFamily="Idea" FontWeight="Medium"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </materialDesign:Card>
                <Label 
                    Margin="10, 0, 0, 0"
                    Content="in column"
                    FontFamily="Idea" FontWeight="Regular" FontSize="10"
                    Foreground="Gray"
                    VerticalAlignment="Bottom"
                    />
                <Label Content="Name" x:Name="CtgNameLabel"
                       MouseDown="CtgNameLabel_MouseDown"
                    FontFamily="Idea" FontWeight="Medium" FontSize="10"
                    Foreground="{StaticResource MaterialDesignLightForeground}"
                    VerticalAlignment="Bottom"/>
            </StackPanel>
            <Grid Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                    x:Name="TaskNameBox"
                    Height="30" Width="200" Margin="0, 10"
                    FontFamily="Idea" FontWeight="Medium" FontSize="12"
                    HorizontalAlignment="Left"
                    TextWrapping="NoWrap"
                    MaxLength="30"
                    materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding Path=IsChecked, 
                    ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox, 
                    Converter={StaticResource BooleanToVisibilityConverter}}"
                    materialDesign:HintAssist.Hint="Task name"/>
                <DatePicker
                    Width="140" Grid.Column="1"
                    HorizontalAlignment="Left"
                    x:Name="DataPicker"
                    FontFamily="Idea" FontWeight="Medium" FontSize="12"
                    materialDesign:HintAssist.Hint="Pick Date"
                    Height="30" />
            </Grid>
            <TextBox
                x:Name="DescriptionBox"
                Margin="0, 10"
                Height="150" Width="365"
                FontFamily="Idea" FontWeight="Medium" FontSize="12"
                HorizontalAlignment="Left"
                materialDesign:HintAssist.Hint="Task Description" Cursor="Arrow"/>
            <Grid Margin="0, 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0"
                    x:Name="markerBox"
                    IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                    materialDesign:HintAssist.Hint="Markers"
                    ItemsSource="{Binding ShortStringList}"
                    Height="30" Width="150" HorizontalAlignment="Left" SelectionChanged="markerBox_SelectionChanged"/>

                <ComboBox Grid.Column="1"
                    x:Name="categoryBox"
                          Margin="0, 0, 20, 0"
                    IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                    materialDesign:HintAssist.Hint="Move to"
                    ItemsSource="{Binding ShortStringList}"
                    Height="30" Width="150" HorizontalAlignment="Right"/>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <Button 
                    Width="100" HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="Save"
                    FontFamily="Idea" FontWeight="Medium" FontSize="13"
                    Margin="0, 20"
                    Style="{StaticResource MaterialDesignFlatAccentBgButton}"
                    x:Name="SaveTaskBtn" Click="SaveTaskBtn_Click"/>
                <Button 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    BorderBrush="Tomato"
                    Margin="20, 20"
                    Foreground="Tomato"
                    FontFamily="Idea" FontWeight="Medium" FontSize="13"
                    x:Name="DeleteTaskBtn" Click="DeleteBtn_Click" Cursor="Hand">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrashOutline" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>