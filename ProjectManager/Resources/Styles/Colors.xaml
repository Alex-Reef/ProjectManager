<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Primary">#4A87FF</Color>
    <Color x:Key="Red">#FFFF7272</Color>
    <Color x:Key="Orange">#FFA572</Color>
    <Color x:Key="Silver">#F2F3F5</Color>
    <Color x:Key="Dark">#323753</Color>

    <DynamicResource ResourceKey="Primary" x:Key="PrimaryColor"/>
    <DynamicResource ResourceKey="Red" x:Key="RedColor"/>
    <DynamicResource ResourceKey="Orange" x:Key="OrangeColor"/>
    <DynamicResource ResourceKey="Silver" x:Key="SilveyColor"/>
    <DynamicResource ResourceKey="Dark" x:Key="DarkColor"/>

    <SolidColorBrush x:Key="PrimaryColorButton" Color="{StaticResource Primary}"></SolidColorBrush>
    <SolidColorBrush x:Key="RedColorButton" Color="{StaticResource Red}"></SolidColorBrush>
    <SolidColorBrush x:Key="OrangeColorButton" Color="{StaticResource Orange}"></SolidColorBrush>
    <SolidColorBrush x:Key="SilverColorButton" Color="{StaticResource Silver}"></SolidColorBrush>
    <SolidColorBrush x:Key="DarkColorButton" Color="{StaticResource Dark}"></SolidColorBrush>
</ResourceDictionary>